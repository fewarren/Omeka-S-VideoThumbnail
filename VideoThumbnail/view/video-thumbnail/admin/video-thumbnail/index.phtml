.configuration-section {
    margin-bottom: 2em;
    background: #f8f8f8;
    padding: 1em;
    border-radius: 4px;
}

.field {
    margin-bottom: 1.5em;
}

.field .field-meta {
    margin-bottom: 0.5em;
}

.field .field-meta label {
    font-weight: bold;
}

.field .field-meta .field-description {
    font-style: italic;
    color: #666;
    margin-top: 0.25em;
}

.field .inputs {
    margin-left: 0.5em;
}
