<?php
/**
 * Template for rendering a VideoThumbnail block
 */
$media = isset($media) ? $media : null;
$framePercent = isset($framePercent) ? (int)$framePercent : 10;
$thumbnailHtml = isset($thumbnailHtml) ? $thumbnailHtml : '';
?>

<div class="video-thumbnail-block">
    <?php if ($thumbnailHtml): ?>
        <div class="thumbnail">
            <?= $thumbnailHtml ?>
        </div>
        <?php if ($media): ?>
        <div class="caption">
            <?= $media->displayTitle() ?>
        </div>
        <?php endif; ?>
    <?php else: ?>
        <div class="video-thumbnail-placeholder">
            <?= $this->translate('No video selected') ?>
        </div>
    <?php endif; ?>
</div>

